<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout_c_todo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".edit_appointments">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <View
            android:id="@+id/edit_appo_title_view"
            android:layout_width="264dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ush_view_values"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.026" />

        <TextView
            android:id="@+id/editt_appo_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/edit_appoint"
            android:textColor="@android:color/background_light"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.026" />

        <View
            android:id="@+id/edit_view_sec"
            android:layout_width="363dp"
            android:layout_height="482dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ush_todo_values"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editt_appo_title_txt"
            app:layout_constraintVertical_bias="0.434" />

        <TextView
            android:id="@+id/edit_appo_p_name_lbl"
            android:layout_width="157dp"
            android:layout_height="27dp"
            android:text="@string/add_appo_pname"

            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/edit_view_sec"
            app:layout_constraintEnd_toEndOf="@+id/edit_view_sec"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toStartOf="@+id/edit_view_sec"
            app:layout_constraintTop_toTopOf="@+id/edit_view_sec"
            app:layout_constraintVertical_bias="0.059" />


        <EditText
            android:id="@+id/edit_appo_p_name_txt"
            android:layout_width="310dp"
            android:layout_height="47dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ush_creat_bg_task"
            android:ems="10"
            android:hint="@string/add_appo_pname_tt"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/edit_view_sec"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="@+id/edit_view_sec"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.266" />


        <TextView
            android:id="@+id/edit_appo_doc_name_lbl"
            android:layout_width="130dp"
            android:layout_height="25dp"
            android:text="@string/add_appoi_doc"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/edit_view_sec"
            app:layout_constraintEnd_toEndOf="@+id/edit_view_sec"
            app:layout_constraintHorizontal_bias="0.141"
            app:layout_constraintStart_toStartOf="@+id/edit_view_sec"
            app:layout_constraintTop_toTopOf="@+id/edit_view_sec"
            app:layout_constraintVertical_bias="0.286" />

        <EditText
            android:id="@+id/edit_appo_doc_name_txt"
            android:layout_width="310dp"
            android:layout_height="47dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ush_creat_bg_task"
            android:ems="10"
            android:hint="@string/add_appo_doc"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/edit_view_sec"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="@+id/edit_view_sec"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.419" />

        <TextView
            android:id="@+id/edit_appo_date_lbl"
            android:layout_width="94dp"
            android:layout_height="32dp"
            android:text="@string/add_appo_date"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/edit_view_sec"
            app:layout_constraintEnd_toEndOf="@+id/edit_view_sec"
            app:layout_constraintHorizontal_bias="0.156"
            app:layout_constraintStart_toStartOf="@+id/edit_view_sec"
            app:layout_constraintTop_toTopOf="@+id/edit_view_sec" />

        <EditText
            android:id="@+id/edit_appo_date_txt"
            android:layout_width="310dp"
            android:layout_height="47dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ush_creat_bg_task"
            android:ems="10"
            android:hint="@string/add_appo_datee"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/edit_view_sec"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="@+id/edit_view_sec"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.57" />

        <ImageButton
            android:id="@+id/edit_add_date_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.832"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.566"
            app:srcCompat="@drawable/calendar" />

        <Button
            android:id="@+id/edit_appo_update_btn"
            android:layout_width="106dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ush_save_btn"
            android:text="@string/edit_todo_update"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="@+id/edit_view_sec"
            app:layout_constraintEnd_toEndOf="@+id/edit_view_sec"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/edit_view_sec"
            app:layout_constraintTop_toBottomOf="@+id/edit_appo_date_txt"
            app:layout_constraintVertical_bias="0.061" />

        <Button
            android:id="@+id/edit_appo_delet_btn"
            android:layout_width="102dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ush_delete_btn"
            android:text="@string/edit_todo_del"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.76" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>